<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="themeName">light</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/colorBackground</item>
        <item name="textColor">@color/colorText</item>
        <item name="textColorSecond">@color/colorTextDark</item>

        <item name="activeCardBackgroundColor">@color/colorUnReadPoem</item>
        <item name="inactiveCardBackgroundColor">@color/colorReadPoem</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorTextDark</item>

        <item name="favoritesIcon">@drawable/ic_stars</item>
        <item name="searchFilterIcon">@drawable/search_filter</item>
        <item name="favoritedIcon">@drawable/ic_star_full</item>

        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="themeName">dark</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="backgroundColor">@color/colorBackgroundDarkTheme</item>
        <item name="activeCardBackgroundColor">@color/colorUnReadPoemDarkTheme</item>
        <item name="inactiveCardBackgroundColor">@color/colorReadPoemDarkTheme</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/colorBackgroundDarkTheme</item>
        <item name="android:textColor">@color/colorTextDarkTheme</item>
        <item name="android:textColorSecondary">@color/colorTextSecondDarkTheme</item>
        <item name="textColor">@color/colorTextDarkTheme</item>
        <item name="textColorSecond">@color/colorTextSecondDarkTheme</item>

        <item name="favoritesIcon">@drawable/ic_stars_darktheme</item>
        <item name="searchFilterIcon">@drawable/search_filter_darktheme</item>
        <item name="favoritedIcon">@drawable/ic_star_full_darktheme</item>

        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Widget.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:popupBackground">?attr/backgroundColor</item>
    </style>

    <style name="ActionButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <!-- this is used to reduce padding of action items to make them fit on the poem page
             setting minWidth instead of width doesn't seem to do anything for some reason -->
        <item name="android:width">0dp</item>

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FilterButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
    </style>

    <style name="PoemRow" parent="CardView">
        <item name="cardBackgroundColor">?attr/activeCardBackgroundColor</item>
        <item name="android:textColor">?attr/textColorSecond</item>
    </style>

    <style name="PoemText">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Mainlist" parent="">
        <item name="android:background">?attr/backgroundColor</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="TextColorSecond">
        <item name="android:textColor">?attr/textColorSecond</item>
    </style>

    <style name="FavoritesButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:drawableLeft">?attr/favoritesIcon</item>
        <item name="android:drawableStart">?attr/favoritesIcon</item>
    </style>

    <style name="SearchFilterButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:drawableLeft">?attr/searchFilterIcon</item>
        <item name="android:drawableStart">?attr/searchFilterIcon</item>
    </style>

    <style name="FavoritedIcon">
        <item name="android:src">?attr/favoritedIcon</item>
    </style>

    <style name="GraphStyle">
        <item name="android:background">@color/ap_transparent</item>
        <item name="backgroundColor">@color/ap_transparent</item>
        <item name="graphBackgroundColor">@color/ap_transparent</item>
        <item name="gridBackgroundColor">@color/ap_transparent</item>
        <item name="domainLineColor">#AAA</item>
        <item name="rangeLineColor">#AAA</item>
        <item name="lineLabelTextColorTop">@color/ap_charcoal</item>
        <item name="lineLabelTextColorBottom">@color/ap_charcoal</item>
        <item name="lineLabelTextColorLeft">@color/ap_charcoal</item>
        <item name="lineLabelTextColorRight">@color/ap_charcoal</item>
        <item name="domainOriginLineColor">@color/ap_transparent</item>
        <item name="rangeOriginLineColor">@color/ap_transparent</item>
        <item name="titleTextColor">@color/ap_black</item>
        <item name="domainTitleTextColor">@color/ap_black</item>
        <item name="rangeTitleTextColor">@color/ap_black</item>
        <item name="legendTextColor">@color/ap_black</item>
        <item name="titleTextSize">17sp</item>
        <item name="rangeTitleTextSize">13sp</item>
        <item name="domainTitleTextSize">13sp</item>
        <item name="graphMarginTop">20dp</item>
        <item name="graphMarginBottom">40dp</item>
        <item name="graphMarginLeft">0dp</item>
        <item name="graphMarginRight">10dp</item>
        <item name="domainLineThickness">1dp</item>
        <item name="rangeLineThickness">1dp</item>
        <item name="domainOriginLineThickness">2dp</item>
        <item name="rangeOriginLineThickness">2dp</item>
        <item name="legendTextSize">15sp</item>
        <item name="legendIconHeight">15dp</item>
        <item name="legendIconWidth">15dp</item>
        <item name="legendHeight">25dp</item>
        <item name="legendAnchor">right_bottom</item>
        <item name="borderColor">@color/ap_transparent</item>
        <item name="gridInsetTop">1dp</item>
        <item name="gridInsetBottom">20dp</item>
        <item name="gridInsetLeft">25dp</item>
        <item name="gridInsetRight">1dp</item>
        <item name="lineLabels">left|bottom</item>
        <item name="lineLabelInsetTop">1dp</item>
        <item name="lineLabelInsetBottom">10dp</item>
        <item name="lineLabelInsetLeft">20dp</item>
        <item name="lineLabelInsetRight">1dp</item>
        <item name="lineLabelTextSizeTop">15sp</item>
        <item name="lineLabelTextSizeBottom">15sp</item>
        <item name="lineLabelTextSizeLeft">15sp</item>
        <item name="lineLabelTextSizeRight">15sp</item>
        <item name="lineLabelAlignLeft">right</item>
        <item name="lineLabelAlignRight">left</item>
        <item name="lineLabelAlignTop">left</item>
        <item name="lineLabelAlignBottom">right</item>
        <item name="lineLabelRotationBottom">-30</item>
        <item name="lineExtensionLeft">3dp</item>
        <item name="lineExtensionBottom">3dp</item>
    </style>
</resources>
