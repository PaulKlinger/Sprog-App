<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="ThemeToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorToolbarIcon</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/colorToolbarIcon</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="titleTextColor">@color/colorToolbarIcon</item>
    </style>

    <style name="ActionButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <!-- this is used to reduce padding of action items to make them fit on the poem page
             setting minWidth instead of width doesn't seem to do anything for some reason -->
        <item name="android:width">0dp</item>

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="GraphStyle">
        <item name="android:background">@color/ap_transparent</item>
        <item name="backgroundColor">@color/ap_transparent</item>
        <item name="graphBackgroundColor">@color/ap_transparent</item>
        <item name="gridBackgroundColor">@color/ap_transparent</item>
        <item name="domainLineColor">#AAA</item>
        <item name="rangeLineColor">#AAA</item>
        <item name="lineLabelTextColorTop">@color/ap_charcoal</item>
        <item name="lineLabelTextColorBottom">@color/ap_charcoal</item>
        <item name="lineLabelTextColorLeft">@color/ap_charcoal</item>
        <item name="lineLabelTextColorRight">@color/ap_charcoal</item>
        <item name="domainOriginLineColor">@color/ap_transparent</item>
        <item name="rangeOriginLineColor">@color/ap_transparent</item>
        <item name="titleTextColor">@color/ap_black</item>
        <item name="domainTitleTextColor">@color/ap_black</item>
        <item name="rangeTitleTextColor">@color/ap_black</item>
        <item name="legendTextColor">@color/ap_black</item>
        <item name="titleTextSize">17sp</item>
        <item name="rangeTitleTextSize">13sp</item>
        <item name="domainTitleTextSize">13sp</item>
        <item name="graphMarginTop">20dp</item>
        <item name="graphMarginBottom">40dp</item>
        <item name="graphMarginLeft">0dp</item>
        <item name="graphMarginRight">10dp</item>
        <item name="domainLineThickness">1dp</item>
        <item name="rangeLineThickness">1dp</item>
        <item name="domainOriginLineThickness">2dp</item>
        <item name="rangeOriginLineThickness">2dp</item>
        <item name="legendTextSize">15sp</item>
        <item name="legendIconHeight">15dp</item>
        <item name="legendIconWidth">15dp</item>
        <item name="legendHeight">25dp</item>
        <item name="legendAnchor">right_bottom</item>
        <item name="borderColor">@color/ap_transparent</item>
        <item name="gridInsetTop">1dp</item>
        <item name="gridInsetBottom">20dp</item>
        <item name="gridInsetLeft">25dp</item>
        <item name="gridInsetRight">1dp</item>
        <item name="lineLabels">left|bottom</item>
        <item name="lineLabelInsetTop">1dp</item>
        <item name="lineLabelInsetBottom">10dp</item>
        <item name="lineLabelInsetLeft">20dp</item>
        <item name="lineLabelInsetRight">1dp</item>
        <item name="lineLabelTextSizeTop">15sp</item>
        <item name="lineLabelTextSizeBottom">15sp</item>
        <item name="lineLabelTextSizeLeft">15sp</item>
        <item name="lineLabelTextSizeRight">15sp</item>
        <item name="lineLabelAlignLeft">right</item>
        <item name="lineLabelAlignRight">left</item>
        <item name="lineLabelAlignTop">left</item>
        <item name="lineLabelAlignBottom">right</item>
        <item name="lineLabelRotationBottom">-30</item>
        <item name="lineExtensionLeft">3dp</item>
        <item name="lineExtensionBottom">3dp</item>
    </style>
</resources>
