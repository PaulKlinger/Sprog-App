<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="ThemeToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorToolbarIcon</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/colorToolbarIcon</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="titleTextColor">@color/colorToolbarIcon</item>
    </style>

    <style name="ActionButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <!-- this is used to reduce padding of action items to make them fit on the poem page
             setting minWidth instead of width doesn't seem to do anything for some reason -->
        <item name="android:width">0dp</item>

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
