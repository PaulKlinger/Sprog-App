<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="Widget.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="ThemeToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorToolbarIcon</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/colorToolbarIcon</item>
    </style>
</resources>
