<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_poem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="com.almoturg.sprog.PoemActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/poem_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="toReddit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableStart="@mipmap/snoo"
            android:drawableLeft="@mipmap/snoo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:minWidth="0dp"
            android:layout_gravity="right|bottom"
            />
    </android.support.v7.widget.Toolbar>

        <android.widget.ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/single_poem_main_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">
            </LinearLayout>
        </android.widget.ScrollView>

</LinearLayout>
